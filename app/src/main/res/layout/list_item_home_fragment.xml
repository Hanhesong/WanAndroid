<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="3dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_homefragment_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="这是文章的标题"
            android:textSize="12sp" />
        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/ib_fragment_artitle_collect"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_homefragment_article_title"
            android:background="@null"
            android:scaleType="fitXY"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_homefragment_article_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_article_category_cate"
        android:layout_alignParentStart="true"
        android:text="作者 ：Song"
        android:textSize="8sp"
        />
    <RelativeLayout
        android:id="@+id/ll_article_category_cate"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/tv_homefragment_article_category"
            android:gravity="left|center_vertical"
            android:text="分类 ：网络访问/网络基础"
            android:textSize="8sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom"
            android:id="@+id/tv_homefragment_article_date"
            android:gravity="right"
            android:text="2019-7-22"
            android:textSize="8sp" />
    </RelativeLayout>
</RelativeLayout>